{
  "name": "pw2025batchframework",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:dev": "npx playwright test --config=playwright.config.dev.ts",
    "test:qa": "npx playwright test --config=playwright.config.qa.ts",
    "test:stage": "npx playwright test --config=playwright.config.stage.ts",
    "test:prod": "npx playwright test --config=playwright.config.ts",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",

    "test:smoke":   "npx playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:critical": "npx playwright test --grep @critical",
    "test:no-flaky": "npx playwright test --grep-invert @flaky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "playwright-html-reporter": "^0.1.11"
  },
  "dependencies": {
    "csv-parse": "^6.1.0"
  }
}
